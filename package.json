{
  "name": "react-custom-ssr",
  "version": "1.0.0",
  "description": "Custom React Server-Side Rendering application with streaming and code splitting",
  "main": "build/server.js",
  "scripts": {
    "clean": "rimraf build",
    "dev": "npm run clean && concurrently \"node scripts/dev.js\" \"wait-on build/server.js && nodemon build/server.js\"",
    "build": "npm run clean && webpack build --config ./config/webpack.prod.js",
    "mock": "json-server --watch ./mocks/data.json --port 8007"
  },
  "keywords": [
    "react",
    "ssr",
    "server-side-rendering",
    "webpack",
    "koa",
    "typescript",
    "streaming"
  ],
  "author": "Young",
  "license": "MIT",
  "packageManager": "pnpm@10.8.1",
  "devDependencies": {
    "@babel/core": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@loadable/babel-plugin": "^5.16.1",
    "@loadable/webpack-plugin": "^5.15.2",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.6.1",
    "@types/koa": "^3.0.0",
    "@types/koa-static": "^4.0.4",
    "@types/koa__router": "^12.0.4",
    "@types/loadable__component": "^5.13.10",
    "@types/loadable__server": "^5.12.11",
    "@types/node": "^24.3.0",
    "@types/react": "18",
    "@types/react-dom": "18",
    "babel-loader": "^10.0.0",
    "concurrently": "^9.2.0",
    "css-loader": "^7.1.2",
    "css-minimizer-webpack-plugin": "^7.0.2",
    "express": "^5.1.0",
    "ignore-loader": "^0.1.2",
    "json-server": "1.0.0-beta.3",
    "koa-proxies": "^0.12.4",
    "mini-css-extract-plugin": "^2.9.4",
    "nodemon": "^3.1.10",
    "react-refresh": "^0.17.0",
    "rimraf": "^6.0.1",
    "terser-webpack-plugin": "^5.3.14",
    "tsconfig-paths-webpack-plugin": "^4.2.0",
    "type-fest": "^4.41.0",
    "typescript": "^5.9.2",
    "wait-on": "^8.0.4",
    "webpack": "^5.101.2",
    "webpack-cli": "^6.0.1",
    "webpack-dev-middleware": "^7.4.2",
    "webpack-dev-server": "^5.2.2",
    "webpack-hot-middleware": "^2.26.1",
    "webpack-merge": "^6.0.1",
    "webpack-node-externals": "^3.0.0"
  },
  "dependencies": {
    "@koa/router": "^14.0.0",
    "@loadable/component": "^5.16.7",
    "@loadable/server": "^5.16.7",
    "@tanstack/react-query": "^5.85.3",
    "koa": "^3.0.1",
    "koa-static": "^5.0.0",
    "react": "18",
    "react-dom": "18",
    "react-router-dom": "6"
  }
}
